<script>
// update the total price
// on the screen
function updatePriceTotal(){

    var count = $('#d1qty').val();
	
    var countwo = $('#d2qty').val();
	
	var countre = $('#d3qty').val();
	
    var d1Cost = 2.00; // cost for one
    
	var d2Cost = 1.00; // cost for one
	
	var d3Cost = 2.00; // cost for one
	
    var totalCost = parseInt(count) * parseInt(d1Cost)+parseInt(countwo) * parseInt(d2Cost)+parseInt(countre) * parseInt(d3Cost);
    
	totalCost = Math.max(0,totalCost);
	
    
     // set the total cost into the total box
     
     $('#currentCost').val(totalCost + '.00');
     
}


